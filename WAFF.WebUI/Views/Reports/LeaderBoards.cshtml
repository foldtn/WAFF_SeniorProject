@model IEnumerable<WAFF.DataAccess.ViewModels.LeaderBoardEntry>

@{
    ViewBag.Title = "Reports";
}

@Html.Partial("Menu")

<script src="~/Scripts/Custom/LeaderBoardsFullScreen.js"></script>

<div id="fullScreen">
    <h1 style="text-align: center; margin-bottom: 30px">Leader Boards</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Genre</th>
                <th class="text-center">Block</th>
                <th class="text-center">Votes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td class="text-center">@f.FilmName</td>
                    <td class="text-center">@f.FilmGenre</td>
                    <td class="text-center">@f.BlockID</td>
                    <td class="text-center">@f.Votes</td>
                </tr>
            }
        </tbody>
    </table>
    <input id="isFull" type="hidden" value="no">
    <div class="text-center">
        <div id="toFull" class="btn btn-default btn-lg" onclick="fullScreen(fullScreen)">Enter Fullscreen</div>
    </div>
</div>
