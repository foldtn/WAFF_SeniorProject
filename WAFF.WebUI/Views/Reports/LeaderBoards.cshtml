@model IEnumerable<WAFF.DataAccess.ViewModels.LeaderBoardEntry>

@{
    ViewBag.Title = "Leader Boards";
}

@Html.Partial("Menu")

<script src="~/Scripts/Custom/LeaderBoardsFullScreen.js"></script>

<div id="fullScreen">
    <h1 style="text-align: center; margin-bottom: 30px"><u><b>Leader Boards</b></u></h1>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center"><h2><b>Place</b></h2></th>
                <th class="text-center"><h2><b>Name</b></h2></th>
                <th class="text-center"><h2><b>Genre</b></h2></th>
                <th class="text-center"><h2><b>Block Time</b></h2></th>
                <th class="text-center"><h2><b>Votes</b></h2></th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = 0;
                decimal votePercent = 0;
                
                foreach (var f in Model)
                {
                    <tr>
                        <td class="text-center">
                         @{
                            if(votePercent == f.VotePercentage)
                            {
                                count--;
                            }
                            
                            votePercent = f.VotePercentage;
                            
                            switch (count)
                            {
                                case 0:
                                    <h4 style="color: gold">1st</h4>
                                    count++;
                                    break;
                                case 1:
                                    <h4 style="color: silver">2nd</h4>
                                    count++;
                                    break;
                                case 2:
                                    <h4 style="color: #cd7f32">3rd</h4>
                                    count++;
                                    break;
                                default:
                                    <h4>@(count + 1)th</h4>
                                    count++;
                                    break;
                            }
                         }
                        </td>
                        <td class="text-center"><h4>@f.FilmName</h4></td>
                        <td class="text-center"><h4>@f.FilmGenre</h4></td>
                        <td class="text-center"><h4>@f.BlockDayOfWeek @f.BlockStart to @f.BlockEnd</h4></td>
                        <td class="text-center"><h4>@f.VotePercentage%</h4></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <input id="isFull" type="hidden" value="no">
    <div class="text-center">
        <div id="toFull" class="btn btn-default btn-lg" onclick="fullScreen(fullScreen)">Enter Fullscreen</div>
    </div>
</div>
