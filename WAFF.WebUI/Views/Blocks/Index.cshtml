@model IEnumerable<WAFF.DataAccess.Entity.Block>

@{
    ViewBag.Title = "Index: All Blocks";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Blocks</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-center">Action</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Location</th>
                <th>Type</th>
                <th class="text-center">Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.BlockID</td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", new { id = item.BlockID })</td>
                    <td>@item.BlockStart</td>
                    <td>@item.BlockEnd</td>
                    <td>@item.BlockLocation</td>
                    <td>@item.BlockType</td>
                    <td class="text-center">@Html.ActionLink("Delete", "Delete", new { id = item.BlockID })</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Block", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
