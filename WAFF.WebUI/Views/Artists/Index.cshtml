@model IEnumerable<WAFF.DataAccess.Entity.Artist>

@{
    ViewBag.Title = "Index: All Artists";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Artists</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th class="text-center">Action</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Company</th>
                <th>Email</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th class="text-right">Zip Code</th>
                <th class="text-right">Phone</th>
                <th class="text-center">Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ArtistID</td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", new { id = item.ArtistID })</td>
                    <td>@item.ArtistFName</td>
                    <td>@item.ArtistLName</td>
                    <td>@item.ArtistCompany</td>
                    <td>@item.ArtistEmail</td>
                    <td>@item.ArtistAddress</td>
                    <td>@item.ArtistCity</td>
                    <td>@item.ArtistState</td>
                    <td class="text-right">@item.ArtistZip</td>
                    <td class="text-right">@item.ArtistPhone</td>
                    <td class="text-center">@Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Artist", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>

