@model IEnumerable<WAFF.DataAccess.Entity.Film>

@{
    ViewBag.Title = "Index: All Movies";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Movies</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th>Genre</th>
                <th class="text-right">Length (min)</th>
                <th class="text-center">Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.FilmID</td>
                    <td>@Html.ActionLink(item.FilmName, "Edit", new { id = item.FilmID })</td>
                    <td>@item.FilmGenre</td>
                    <td class="text-right">@item.FilmLength</td>
                    <td class="text-center">@Html.ActionLink("Delete", "Delete", new { id = item.FilmID })</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Movie", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
